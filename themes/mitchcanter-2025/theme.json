				{
					"name": "Tropical Splash",
					"slug": "tropical-splash",
					"color": "rgb(112, 203, 208)"
				},	
				{
					"name": "Bell Heather",
					"slug": "bell-heather",
					"color": "rgb(164, 113, 177)"
				},
				{
					"name": "Brown Knapweed",
